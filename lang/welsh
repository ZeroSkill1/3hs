# asking user if they want to delete unused tickets, %1 = amount of unused tickets that were found
- found_unused_tickets +code(number)
if (p1 < 10) {
    switch (p1) {
        case 1:
            return "Wedi ffeindio %1 tocyn heb ei ddefnyddio. Ydych chi am ei ddileu?";
        
        case 2:
            return "Wedi ffeindio %1 docyn heb eu defnyddio. Ydych chi am eu dileu?";
        
        case 3: case 6:
            return "Wedi ffeindio %1 thocyn heb eu defnyddio. Ydych chi am eu dileu?";
        
        default:
            return "Wedi ffeindio %1 tocyn heb eu defnyddio. Ydych chi am eu dileu?";
    }
} else {
    return "Wedi ffeindio %1 o docynnau heb eu defnyddio. Ydych chi am eu dileu?";
}

